<div class="row">
    {% for produit in produits %}
        <div class="col-2 row-eq-height card m-1 bg-body-secondary text-center">
            <img src="{{ produit.image }}" style="height: 200px; max-width: 100%" class="card-img-top p-2" alt="{{ produit.nom}}">
            <div class="card-body">
                <h5 class="card-title">{{ produit.nom}}</h5>
                {% if produit.hasManyVariantProduits %}
                    <p class="card-text"> A partir de {{ (produit.getMinPrice/100)|format_currency('EUR') }}</p>
                {% else %}
                    <p class="card-text"> A {{ (produit.getMinPrice/100)|format_currency('EUR') }}</p>
                {% endif %}
                <a href="{{ path('app_produit' , {'id': produit.id }) }}" class="btn btn-primary">Voir l'article</a>
            </div>
        </div>
    {% endfor %}
</div>